---
/**
 * Single large blurred shape
 * A subtle ambient glow in the corner
 */
---

<div class="ambient-glow-container" aria-hidden="true">
  <div class="ambient-glow"></div>
</div>

<style is:global>
  .ambient-glow-container {
    position: fixed;
    inset: 0;
    z-index: 100;
    overflow: hidden;
    pointer-events: none;
  }

  @keyframes breathe-hue {
    0%, 100% {
      transform: scale(1);
      filter: blur(70px) hue-rotate(0deg);
    }
    33% {
      transform: scale(1.4);
      filter: blur(70px) hue-rotate(90deg);
    }
    66% {
      transform: scale(1.15);
      filter: blur(70px) hue-rotate(-60deg);
    }
  }

  .ambient-glow {
    position: absolute;
    bottom: -120px;
    right: -80px;
    width: 650px;
    height: 650px;
    background: linear-gradient(135deg, #f87171 0%, #818cf8 50%, #22d3ee 100%);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    filter: blur(70px);
    opacity: 0.25;
    animation: breathe-hue 20s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .ambient-glow {
      animation: none;
      filter: blur(70px);
    }
  }

  html.dark .ambient-glow {
    background: linear-gradient(135deg, #dc2626 0%, #6366f1 50%, #0891b2 100%);
    opacity: 0.18;
  }
</style>
